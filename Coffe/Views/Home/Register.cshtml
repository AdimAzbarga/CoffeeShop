@model Coffe.Models.User

@{
    ViewBag.Title = "Register";
    Layout =null;
}



<!DOCTYPE html>

<html>
@Styles.Render("https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
@Styles.Render("https://fonts.googleapis.com/css?family=Montserrat|Ubuntu")
@Styles.Render("https://fonts.googleapis.com/css?family=Montserrat|Ubuntu")
@Styles.Render("~/Content/css/style.css")
@Scripts.Render("https://code.jquery.com/jquery-3.2.1.slim.min.js")
@Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
@Scripts.Render("https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
@Scripts.Render("https://use.fontawesome.com/releases/v5.0.7/js/all.js")
@*@RenderSection("scripts", required: false)*@

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
    @*@RenderSection("scripts", required: false)*@
    
<style>
        .focus-input::before {
            background: #1e3932;
        }

        .focus-input2::before {
            background: #1e3932;
        }

        .btn:hover {
            background: #1e3932;
        }

        .btn {
            background: #1e3932;
        }

        .heading h1 {
            color: #1e3932;
        }

        body {
            background-color: #e0f1d0;
        }
 </style>    
    

</head>
<body>
@using (Html.BeginForm("Create", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="form">
                <div class="heading">
                    @*<img src="logo.png" class="logo">*@
                    <h1>Register </h1>
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="wrap2">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="wrap2">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="wrap2">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="wrap2">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="wrap2">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="wrap2">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <h6>@ViewBag.massage</h6>
            
                <input type="submit" value="Create" class="btn btn-default" />
                  
              
                 </div>
            <!--Image-->
            <div class="image">
                <img src="../../images/signupfin.png" class="img" alt="" />
            </div>
           
        </div>
    }
</body>

@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@

</html>